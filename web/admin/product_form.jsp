<script>
    function loadSubCategories() {
        var categoryId = document.getElementById("category").value;
        var subCategorySelect = document.getElementById("subCategory");
        var loadingIndicator = document.getElementById("loadingIndicator");

        // Ê∏ÖÁ©∫Â∞èÂàÜÁ±ªÈÄâÈ°π
        subCategorySelect.innerHTML = '<option value="">Ê≠£Âú®Âä†ËΩΩ...</option>';
        subCategorySelect.disabled = true;
        loadingIndicator.style.display = 'block';

        if (!categoryId) {
            subCategorySelect.innerHTML = '<option value="">ËØ∑ÂÖàÈÄâÊã©Â§ßÂàÜÁ±ª</option>';
            subCategorySelect.disabled = false;
            loadingIndicator.style.display = 'none';
            return;
        }

        // ‰ΩøÁî® AJAX Ëé∑ÂèñÂ∞èÂàÜÁ±ªÊï∞ÊçÆ
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "getSubCategories.jsp?categoryId=" + categoryId, true);
        xhr.onreadystatechange = function() {
            if (xhr.readyState == 4) {
                loadingIndicator.style.display = 'none';
                subCategorySelect.disabled = false;

                if (xhr.status == 200) {
                    try {
                        var subCategories = JSON.parse(xhr.responseText);
                        subCategorySelect.innerHTML = '<option value="">ËØ∑ÈÄâÊã©Â∞èÂàÜÁ±ª</option>';

                        for (var i = 0; i < subCategories.length; i++) {
                            var option = document.createElement("option");
                            option.value = subCategories[i].subCategoryId;
                            option.text = subCategories[i].subCategoryName;
                            subCategorySelect.add(option);
                        }

                        if (subCategories.length === 0) {
                            subCategorySelect.innerHTML = '<option value="">ËØ•ÂàÜÁ±ª‰∏ãÊöÇÊó†Â∞èÂàÜÁ±ª</option>';
                        }
                    } catch (e) {
                        console.error('Ëß£ÊûêJSONÂ§±Ë¥•:', e);
                        subCategorySelect.innerHTML = '<option value="">Âä†ËΩΩÂ§±Ë¥•ÔºåËØ∑ÈáçËØï</option>';
                    }
                } else {
                    subCategorySelect.innerHTML = '<option value="">Âä†ËΩΩÂ§±Ë¥•ÔºåËØ∑ÈáçËØï</option>';
                }
            }
        };
        xhr.onerror = function() {
            loadingIndicator.style.display = 'none';
            subCategorySelect.disabled = false;
            subCategorySelect.innerHTML = '<option value="">ÁΩëÁªúÈîôËØØÔºåËØ∑ÈáçËØï</option>';
        };
        xhr.send();
    }

    // È¢ÑËßà‰∏ä‰º†ÁöÑÂõæÁâá
    function previewImage(input) {
        var imageUrl = document.getElementById('imageUrl');
        var preview = document.getElementById('imagePreview');
        var previewImg = document.getElementById('previewImg');

        if (input.files && input.files[0]) {
            // Ê∏ÖÁ©∫ÂõæÁâáË∑ØÂæÑËæìÂÖ•Ê°Ü
            imageUrl.value = '';

            var reader = new FileReader();
            reader.onload = function(e) {
                previewImg.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            preview.style.display = 'none';
        }
    }

    // È¢ÑËßàÂõæÁâáË∑ØÂæÑ
    function previewImageUrl(input) {
        var imageFile = document.getElementById('imageFile');
        var preview = document.getElementById('imagePreview');
        var previewImg = document.getElementById('previewImg');

        if (input.value.trim()) {
            // Ê∏ÖÁ©∫Êñá‰ª∂‰∏ä‰º†
            imageFile.value = '';

            // ÊûÑÂª∫ÂÆåÊï¥ÁöÑÂõæÁâáURL
            var fullUrl = '${pageContext.request.contextPath}/' + input.value;
            previewImg.src = fullUrl;
            preview.style.display = 'block';

            // Ê£ÄÊü•ÂõæÁâáÊòØÂê¶ËÉΩÊ≠£Â∏∏Âä†ËΩΩ
            previewImg.onerror = function() {
                preview.style.display = 'none';
            };
        } else {
            preview.style.display = 'none';
        }
    }

    // Ë°®ÂçïÊèê‰∫§ÂâçÈ™åËØÅ
    document.getElementById('productForm').addEventListener('submit', function(e) {
        var categoryId = document.getElementById('category').value;
        var subCategoryId = document.getElementById('subCategory').value;
        var imageFile = document.getElementById('imageFile').files[0];
        var imageUrl = document.getElementById('imageUrl').value.trim();

        if (!categoryId) {
            alert('ËØ∑ÈÄâÊã©ÂïÜÂìÅÂ§ßÂàÜÁ±ªÔºÅ');
            e.preventDefault();
            return false;
        }

        if (!subCategoryId) {
            alert('ËØ∑ÈÄâÊã©ÂïÜÂìÅÂ∞èÂàÜÁ±ªÔºÅ');
            e.preventDefault();
            return false;
        }

        if (!imageFile && !imageUrl) {
            alert('ËØ∑‰∏ä‰º†ÂïÜÂìÅÂõæÁâáÊàñËæìÂÖ•ÂõæÁâáË∑ØÂæÑÔºÅ');
            e.preventDefault();
            return false;
        }

        // ÊòæÁ§∫Êèê‰∫§‰∏≠Áä∂ÊÄÅ
        var submitBtn = document.querySelector('.submit-btn');
        submitBtn.innerHTML = '‚è≥ Ê≠£Âú®Ê∑ªÂä†...';
        submitBtn.disabled = true;
    });

    // È°µÈù¢Âä†ËΩΩÂÆåÊàêÂêéÁöÑÂàùÂßãÂåñ
    document.addEventListener('DOMContentLoaded', function() {
        // ‰∏∫Êï∞Â≠óËæìÂÖ•Ê°ÜÊ∑ªÂä†Ê†ºÂºèÂåñ
        var priceInput = document.getElementById('price');
        priceInput.addEventListener('blur', function() {
            if (this.value) {
                this.value = parseFloat(this.value).toFixed(2);
            }
        });
    });
</script>
